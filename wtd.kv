<DummyScreen>:
    name: "dummy_screen"    
    Label:
        text: "This is Dummy Screen"

<MainScreen>:
    name: "main_screen"
    on_enter:
        root.LoadTasks()
    GridLayout:
        cols: 1
        size_hint: (1, 1)

        GridLayout:
            cols: 1

            Label:
                text: 'This week progress:'
                text_size: self.size
                halign: 'left'
                size_hint: (1, None)
                height: 30

            GridLayout:
                cols: 1
                id: tasks

            Label:
                text: 'Tasks done:'
                text_size: self.size
                halign: 'left'
                size_hint: (1, None)
                height: 30

            GridLayout:
                cols: 1
                id: finished_tasks

        GridLayout:
            id: menu_buttons
            rows: 1
            size_hint: (1, None)
            height: 50

            Button:
                text: "Edit task list"
                on_release:
                    app.root.current = "edit_task_list"
                    root.manager.transition.direction = "left"
            
            Button:
                text: "Settings"
                id: settings
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "settings_screen"

<EditTaskList>:
    name: "edit_task_list"
    on_enter:
        root.LoadTasks()
    GridLayout:
        cols: 1
        size_hint: (1, 1)

        Label:
            text: 'List of tasks:'
            size_hint: (1, None)
            height: 30

        GridLayout:
            cols: 1
            id: tasks_list
        
        GridLayout:
            rows: 1
            name: 'menu buttons'
            size_hint: (1, None)
            height: 50

            Button:
                text: 'Add new task'
                on_release:
                    app.root.current = "add_task_screen"
                    root.manager.transition.direction = "left"
            
            Button:
                text: 'Done'
                on_release:
                    app.root.current = "main_screen"
                    root.manager.transition.direction = "right"


<AddTaskScreen>:
    name: "add_task_screen"

    on_enter:
        self.ClearForm()

    GridLayout:
        cols: 1

        GridLayout:
            cols: 1
            
            Label:
                text: 'Enter name:'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_name
                multiline: False
            Label:
                text: 'Enter duration (mins):'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_duration
                multiline: False
            Label:
                text: 'Enter number of repeats:'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_times
                multiline: False
            

        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: 50

            Button:
                text: "Add task"
                on_release:
                    root.add_new_task()
                    app.root.current = "edit_task_list"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Cancel"
                on_release:
                    app.root.current = "edit_task_list"
                    root.manager.transition.direction = "right"

<EditTaskScreen>:
    name: "edit_task_screen"

    on_enter:
        self.FillForm()
        
    GridLayout:
        cols: 1

        GridLayout:
            cols: 1
            
            Label:
                text: 'Name:'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_name
                multiline: False
            Label:
                text: 'Duration (mins):'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_duration
                multiline: False
            Label:
                text: 'Number of repeats:'
                size_hint: (1, None)
                height: 30
            TextInput:
                id: task_times
                multiline: False
            
        GridLayout:
            rows: 1
            size_hint: (1, None)
            height: 50

            Button:
                text: "Save changes"
                on_release:
                    root.edit_task()
                    app.root.current = "edit_task_list"
                    root.manager.transition.direction = "right"
            
            Button:
                text: "Cancel"
                on_release:
                    app.root.current = "edit_task_list"
                    root.manager.transition.direction = "right"

<TimerScreen>:
    name: "timer_screen"
    on_enter:
        root.start_timer()

    GridLayout:
        cols: 1

        Label:
            text: "countdown timer"
        
        Label:
            id: task_name
        
        Label:
            id: countdown_timer
        
        GridLayout:
            id: buttons_inder_timer
            rows: 1
            size_hint: (1, None)
            height: 50

            Button:
                text: "Finish task"
                on_release:
                    root.cancel_timer()
                    root.finish_task()
                    root.manager.transition.direction = "down"
                    app.root.current = "main_screen"
                    
            
            Button:
                text: "Cancel task"
                on_release:
                    root.cancel_timer()
                    app.root.current = "main_screen"
                    root.manager.transition.direction = "down"

<SettingsScreen>:
    name: "settings_screen"

    GridLayout:
        cols: 1

        Label:
            text: "Settings"
            size_hint: (1, None)
            height: 30
        
        GridLayout:
            id: setting_buttons
            cols: 1

            Button:
                text: "Finish week"
                size_hint: (1, None)
                height: 50
                on_release:
                    root.close_week()
        
        GridLayout:
            id: back_buttons
            rows: 1
            size_hint: (1, None)
            height: 50

            Button:
                text: "Back"
                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "main_screen"
